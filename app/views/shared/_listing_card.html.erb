<!-- Gallery item -->
<div class="col-xl-3 col-lg-4 col-md-6 mb-4">
<%# turn into image %>
  <div class="bg-white rounded shadow-sm img-fluid card-img-top"><%= cl_image_tag(listing.photo.key) %>
  </div>
    <div class="p-4">
    <%# turn into button %>
      <h5 class="text-center mb-2 text-dark"> <%= link_to listing.title, listing_path(listing)%> </h5>
      <div class="d-flex justify-content-between">
        <p class="small text-muted mb-0"><%= listing.sport_type %></p>
        <p class="small text-muted mb-0">%<%= listing.hourly_price %>/hr</p>
      </div>
      <div class="d-flex justify-content-center">
        <div class="btn btn-success w-50 mt-4 m-auto">
        BOOK
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End -->
