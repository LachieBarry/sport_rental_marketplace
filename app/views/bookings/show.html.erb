<%= @booking %>
<br>
start: <%= @booking.start_date %>
<br>
end: <%= @booking.end_date %>
<br>
total: <%= @booking.total_price %>
<br>
accepted: <%= @booking.accepted %>
<br>
<%# Link the below to to profiles for the user? Also, make sure to find the correct user for owner once updated to main %>
owner: <%= Listing.find(@booking.listing_id) %>
<br>
renter: <%= User.find(@booking.user_id).first_name %>, <%= User.find(@booking.user_id).last_name %>
<br>
<%= link_to "Delete", booking_path(@booking), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this listing?"}, class: 'btn btn-danger' %>
<%= link_to Listing.find(params[:id]).title, listing_path(params[:id]), class: 'btn btn-primary' %>

<% listing = Listing.find(@booking.listing_id) %>
<% owner = User.find(listing.user_id)%>
<% if owner == current_user %>
  <%= button_to "confirm", action: "confirm" %>
  <%= button_to "reject", action: "reject" %>
<% end %>
