<h1>Listing Details</h1>

<h2><%= @listing.title %></h2>
<br>
type: <%= @listing.sport_type %>
<br>
price: <%= @listing.hourly_price %>
<br>
desc: <%= @listing.description %>
<br>
<% @listing.bookings.each do |booking| %>
  <% title = User.find(booking.user_id)%>
  <h2><%= link_to title, listing_booking_path(booking)%></h2>
<% end %>

<%= cl_image_tag(@listing.photo.key) %>
<div>
